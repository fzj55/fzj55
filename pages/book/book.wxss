.draw{ /* 按钮美化 */
    margin-top: 3%;
	width: 170px; /* 宽度 */
	height: 40px; /* 高度 */
	border-radius: 3px; /* 边框半径 */
	background:linear-gradient(to bottom, #e2e9f1, #7f9dc7); /* 背景颜色 */
	font-family: Microsoft YaHei; /* 设置字体 */
	color: rgb(20, 17, 17); /* 字体颜色 */
    font-size: 17px; /* 字体大小 */
    font-weight: 600;
}

   
  .pages_box{
    margin-top: 20rpx;
    display: flex;
    display: -webkit-flex;
    flex-direction: row;
    justify-content: center;
    align-content: flex-start;
    flex-wrap: nowrap;
  }
  .pages_box>view{
    width: 80rpx;
    height: 50rpx;
    line-height: 50rpx;
    font-size: 30rpx;
    border: 1px solid #A0A0A0;
    background-color: #F7F7F7;
    display: inline-block;
    margin-left: 12rpx;
    color: #64646C;
    border-radius: 10rpx;
    text-align: center;
  }
  .pages_box>view.active{
    width: 130rpx;
    border-radius: 60rpx;
