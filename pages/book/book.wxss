}
swiper{
    height: 80%;
    width: 100%;
    display: flex;
    flex-direction: flex-end;
}
.ns {
    width: 100%;
    height: 20%;
    text-align:center;
    color: black;
    font-weight:bold;
    line-height:133px;
    background:linear-gradient(to top, #ffffff , #4f75af);
    position: fixed;
    top: 0;
  }
.a{
  width: 100%;
  height: 5%;
  position: absolute; top:12%;
  border: #6996d5 3px solid;
}
.c{
height: 44rpx; margin-left: 0px;
font-size: 30rpx; font-weight: 550;
white-space: nowrap; 
color:rgb(235, 44, 44);
animation: myfirst 10s linear infinite;
}
@keyframes myfirst{
  0% {margin-left:1200rpx;} 100% {margin-left:-1000rpx; margin-left: -1500rpx;}
  }
swiper-item{
    margin-top: 30%;
