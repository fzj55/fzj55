page{
    height: 100%;
    background-color: white;
}
.ns {
    width: 100%;
    height: 20%;
    text-align:center;
    line-height: 155rpx; 
    color: white;
    font-weight:bold;
    background:linear-gradient(to bottom, #4f75af, white);
    display: flex;
  }
  .ns image{
    margin-top: 5%;
    height: 40rpx;
    width: 40rpx;
    position: fixed;
    left: 20rpx;
    top: 75rpx;
}
.login_container{
    height:60%;
    color:#3b5e8b;
    font-weight: 500;
    font-size: large;
}
.au_box{
    height: 30%;
    width: 90%;
    margin-left:18px ;
    background: radial-gradient(circle at left, transparent 10px,  #d3d5d6 0) top left / 60px 100% no-repeat,
    radial-gradient(circle at right, transparent 10px, #d3d5d6 0) top right /280px 100% no-repeat;
    filter: drop-shadow(3px 3px 3px rgba(0,0,0,.3));
    display: flex;
    flex-direction: row;
}
.au_box_left{
    margin-top: 4%;
    margin-left: 8%;
    width: 35%;
    height: 83%;
    background-color: #d8e1ed;
    border-radius: 100%;
}
.au_box_left image{
    margin-top: 18%;
    margin-left: 21%;
    height: 60%;
    width: 60%;
}
.au_box_right{
    margin-top: 4%;
    margin-left: 2%;
    width: 50%;
    height: 80%;
    display: flex;
    flex-direction: column;
}
.get_code{
    margin-top: 3%;
    width: 90% !important;
    height:10%;
    background: linear-gradient(to top, #7393bd, white);
    font-weight: 500;
}
.wmnotice{
    height: 150px;
}
.slopingside_left{
    margin-top: 8%;
    margin-left:18%;
    height:0px;
    border: 1px solid #a5b0a2;
    width: 130px;
    transform:rotate(140deg);
    -o-transform:rotate(140deg);
    -moz-transform:rotate(140deg);
    -webkit-transform:rotate(140deg);
}
.slopingside_right{
    margin-top: 0%;
    margin-left:44%;
    height:0px;
    border: 1px solid #a5b0a2;
    width: 130px;
    transform:rotate(-140deg);
    -o-transform:rotate(-140deg);
    -moz-transform:rotate(-140deg);
    -webkit-transform:rotate(-140deg);
}
.content{
    margin-left: 5%;
    width: 90%;
    height: 150px;
    background: #c2d0e3;
    display: flex;
    flex-direction: column;
}
.color{
    height: 20%;
    background:linear-gradient(to top, #4f75af, white);
}